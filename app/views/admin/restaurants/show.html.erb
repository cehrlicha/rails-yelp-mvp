
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.it/200/300?image=1060');">
  <div class="banner-content">
    <h1><%= @restaurant.name %></h1>
    <p><em> <%= @restaurant.category.capitalize %> </em></p>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div class="description">

      <p><%= @restaurant.address %></p>
      </div>
    </div>

    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div class="text-center description">
      <%= link_to "Back to list", admin_restaurants_path, class: "btn btn-success" %>
      <%= link_to "Edit", edit_admin_restaurant_path(@restaurant), class: "btn btn-warning" %>
      <%= link_to "Delete", admin_restaurant_path(@restaurant),
      method: :delete, class: "btn btn-primary" %>
      </div>
    </div>

  </div>
</div>

