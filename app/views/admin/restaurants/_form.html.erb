<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-offset-3 col-sm-6">

    <%= simple_form_for [:admin, @restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
      <%= f.input :address %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

    </div>
  </div>
</div>

