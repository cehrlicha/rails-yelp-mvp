<h1 class="text-center"> My restaurants </h1>

<div class="container">
  <div class="row">

    <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->


      <%= link_to restaurant_path(restaurant) do %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.it/200/300?image=1060');">
        <div class="card-category"><%= restaurant.category %></div>

        <div class="card-description">
          <h2><%= restaurant.name %></h2>
          <p><%= restaurant.address %></p>
        </div>
      </div>

      <% end %>
    </div>
      <% end %>

  </div>
</div>


